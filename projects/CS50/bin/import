#!/usr/bin/env php
<?php
    require_once("../includes/config.php");
    
    //check if the file exists from command line argument
    $file_path = $argv[1];
    
    if(file_exists($file_path) == false)
    {
        echo("File does not exist");
        return false;
    }
    // check whether the file is actually readable
    else if(is_readable($file_path) == false)
    {
        echo("File is not readable");
        return false;
    }
    //otherwise open the file
    else
    {
        $file = fopen($file_path, "r");
        
        // iterate through each line
        while(feof($file) == false)
        {
            $data =fgetcsv($file, 1000, "\t");
            
            CS50::query("INSERT IGNORE INTO places (country_code, postal_code, place_name,
            admin_name1, admin_code1, admin_name2, admin_code2, admin_name3, admin_code3,
            latitude, longitude, accuracy) 
            VALUES(?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", 
            $data[0], $data[1], $data[2], $data[3], $data[4], $data[5],
            $data[6], $data[7], $data[8], $data[9], $data[10], $data[11]);
        }
        
    // Close the file, confirm import.
    fclose($file);
    echo("Done importing!");
    }
    
?>